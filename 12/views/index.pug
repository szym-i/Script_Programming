            function requestFetchPost() {
                fetch('/submit', {
                    method: 'POST',
                    body: 'imie=' + encodeURI(document.getElementById("imie").value)
                    }) 
                    .then(function (response) { 
                    if (!response.ok) {
                        throw Error(response.statusText);
                    }
                    response.text().then(function (text) {
                            window.alert(text); 
                            console.log(text);
                        });
                    })
                    .catch(function (error) { 
                    window.alert(error);
                    });
            }

